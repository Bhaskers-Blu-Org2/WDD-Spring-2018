<UserControl x:Class="ContosoInsurance.Controls.StatusIcon"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="using:ContosoInsurance.Controls"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="300"
             d:DesignWidth="400"
             mc:Ignorable="d">

    <Grid x:Name="LayoutRoot">
        <Ellipse x:Name="BusyIcon"
                 Width="6"
                 Height="6"
                 x:Load="False"
                 Fill="{StaticResource Red80}" />
        <Ellipse x:Name="AvailableIcon"
                 Width="6"
                 Height="6"
                 x:Load="False"
                 Fill="{StaticResource Green80}" />
    </Grid>
</UserControl>
